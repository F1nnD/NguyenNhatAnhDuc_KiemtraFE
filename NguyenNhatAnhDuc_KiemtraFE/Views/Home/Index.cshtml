@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Tiki Product Page</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            width: 100%;
        }

        .header {
            background-color: #fff;
            padding: 10px 20px;
        }

        .header-logo {
            display: flex;
            justify-content: space-between;
        }

        .header img {
            height: 50px;
        }

        .header input {
            width: 100%;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .header .icons {
            display: flex;
            align-items: center;
        }

            .header .icons i {
                margin-left: 20px;
                font-size: 20px;
                color: #333;
            }

        .category-links {
            margin-top: 10px;
        }

        .breadcrumb {
            font-size: 14px;
            color: #666;
            padding-top: 1em;
            padding-bottom: 1em;
            padding-left: 3em;
            padding-right: 3em;
        }

            .breadcrumb a {
                color: #007bff;
                text-decoration: none;
            }

                .breadcrumb a:hover {
                    text-decoration: underline;
                }

        .container {
            display: flex;
            padding: 0px;
            width: 90%;
            gap: 20px;
        }

        .left-column, .center-column, .right-column {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
        }

        .left-column {
            flex: 1;
            margin-right: 10px;
        }

        .center-column {
            flex: 1;
            margin-right: 20px;
        }

        .right-column {
            flex: 1;
            height: auto;
            width: auto;
        }

        .product-images img {
            width: 100%;
            border-radius: 8px;
        }

        .product-thumbnails {
            display: flex;
            margin-top: 10px;
            padding: 10px;
        }

            .product-thumbnails img {
                width: 60px;
                height: 60px;
                margin-right: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                cursor: pointer;
            }

        .product-info h1 {
            font-size: 24px;
            margin: 0;
        }

        .product-info .rating {
            display: flex;
            align-items: center;
            margin: 10px 0;
        }

            .product-info .rating i {
                color: #ffcc00;
                margin-right: 5px;
            }

        .product-info .price {
            font-size: 28px;
            color: #d0021b;
            margin: 10px 0;
            text-align: left;
        }

        .product-info .flavor {
            margin: 10px 0;
            text-align: left;
        }

            .product-info .flavor button {
                padding: 5px 10px;
                border: 1px solid #007bff;
                background-color: #fff;
                color: #007bff;
                border-radius: 4px;
                cursor: pointer;
            }

                .product-info .flavor button:hover {
                    background-color: #007bff;
                    color: #fff;
                }

        .shipping-info {
            margin-top: 20px;
        }

            .shipping-info h3 {
                font-size: 18px;
                margin: 0 0 10px 0;
            }

            .shipping-info p {
                margin: 5px 0;
                font-size: 14px;
            }

            .shipping-info .highlight {
                color: #d0021b;
                font-weight: bold;
            }

        .purchase-options {
            text-align: center;
        }

            .purchase-options .price {
                font-size: 28px;
                color: #d0021b;
                margin: 20px 0;
            }

            .purchase-options .quantity {
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 20px 0;
            }

                .purchase-options .quantity button {
                    padding: 5px 10px;
                    border: 1px solid #ccc;
                    background-color: #fff;
                    cursor: pointer;
                }

                .purchase-options .quantity input {
                    width: 40px;
                    text-align: center;
                    border: 1px solid #ccc;
                    margin: 0 10px;
                }

            .purchase-options .buy-now, .purchase-options .add-to-cart {
                display: block;
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 4px;
                font-size: 16px;
                cursor: pointer;
                margin: 10px 0;
            }

            .purchase-options .buy-now {
                background-color: #d0021b;
                color: #fff;
            }

            .purchase-options .add-to-cart {
                background-color: #007bff;
                color: #fff;
            }

        input[type="text"] {
            width: 1000px; /* Độ rộng của input */
            padding: 5px; /* Khoảng cách bên trong input */
            border: 2px solid #007bff; /* Viền input */
            border-radius: 8px; /* Góc bo tròn */
            font-size: 12px; /* Kích thước chữ */
            color: #333; /* Màu chữ */
            background-color: #f9f9f9; /* Màu nền */
            outline: none; /* Xóa viền mặc định khi nhấp vào */
            transition: border-color 0.3s ease-in-out; /* Hiệu ứng khi thay đổi viền */
        }

            /* Khi người dùng nhấp vào input */
            input[type="text"]:focus {
                border-color: #0056b3; /* Thay đổi màu viền khi được chọn */
                background-color: #fff; /* Màu nền khi input được chọn */
            }

            /* Thiết lập cho placeholder */
            input[type="text"]::placeholder {
                color: #aaa; /* Màu chữ placeholder */
                font-style: italic; /* Nghiêng chữ placeholder */
            }

        .shipping-info {
            background-color: white;
            flex: 1;
            margin-right: 20px;
            border-radius: 8px;
            display: normal;
            padding: 5px;
        }

        section div h2 {
            border-bottom: 1px solid #ccc;
            color: #504e4e;
            user-select: text;
        }

        section div h2 {
            text-align: left;
        }

        section div table {
            width: auto;
            display: flex;
            border-bottom: 1px solid #ccc;
            color: #504e4e;
            user-select: text;
        }

        section div h4 {
            border-bottom: 1px solid #ccc;
            color: #504e4e;
            user-select: text;
            text-align: left;
        }

        section div h6 {
            text-align: left;
            color: #504e4e;
        }

        section div h7 p {
            border-bottom: 1px solid #ccc;
            color: #504e4e;
            user-select: text;
            text-align: left;
            width: auto;
            padding: 20px;
        }

        section div h8 {
            text-align: left;
        }

        .anh {
            padding: 20px;
        }

        .header-top {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-bottom: 10px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #333;
            margin-right: 20px;
            font-size: 14px;
        }

            .menu-item img {
                width: 24px;
                height: 24px;
                margin-right: 6px;
            }

            .menu-item.cart {
                position: relative;
            }

        .cart-count {
            position: absolute;
            top: -5px;
            right: -10px;
            background-color: red;
            color: white;
            font-size: 10px;
            border-radius: 50%;
            padding: 2px 6px;
        }

        .header-bottom {
            display: flex;
            align-items: center;
            font-size: 14px;
            margin-top: 5px;
        }

            .header-bottom img {
                width: 20px;
                height: 20px;
                margin-right: 6px;
            }

        .address {
            color: #0c59db;
            text-decoration: none;
            margin-left: 5px;
        }

            .address:hover {
                text-decoration: underline;
            }

        .additional-services { 
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 16px;
            background-color: #fff;
            width: 91%;
        }

            .additional-services h3 {
                margin: 0;
                font-size: 16px;
                color: #333;
            }

        .service-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 16px;
        }

            .service-item:first-child {
                margin-top: 8px;
            }

        .service-icon img {
            width: 40px; /* Adjust icon size */
            height: auto;
        }

        .service-details {
            flex: 1;
            margin-left: 12px;
            font-size: 14px;
            color: #333;
        }

        .service-action a {
            color: #0c59db;
            text-decoration: none;
            font-weight: bold;
        }

            .service-action a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div id="container-fluid">
        <div class="text-center">
            <div style="color:#0caa00; background-color:#effff4; text-align:center; height:50px; display: flex; align-items: center; justify-content: center;" class="voucher">
                <p style="margin: 0;">Freeship đơn từ 45k, giảm nhiều hơn cùng Freeship Xtra</p>
            </div>
            <div class="header">
                <div class="header-logo">
                    <!-- Thay đổi đường dẫn ảnh logo bằng Razor -->
                    <img src="~/Content/Image/Logo_Tiki_2023.png" alt="Tiki Logo" style="height=800" />

                    <!-- Thanh tìm kiếm -->
                    <input placeholder="Giao nhanh 2h" type="text" style="width:800px" />

                    <!-- Các icon bên phải -->
                    <div class="header-top">
                        <a href="#" class="menu-item">
                            <img src="~/Content/Image/nha.png" alt="Home Icon" />
                            Trang chủ
                        </a>
                        <a href="#" class="menu-item">
                            <img src="~/Content/Image/add.png" alt="Account Icon" />
                            Tài khoản
                        </a>
                        <a href="#" class="menu-item cart">
                            <img src="~/Content/Image/shop.png" alt="Cart Icon" />
                            <span class="cart-count">0</span>
                        </a>
                    </div>
                </div>
                <div style="display: flex; align-items: flex-end; justify-content: space-between;">
                    <div>
                    </div>
                    <div style="justify-content: center">
                        <div class="category-links">
                            <a href="#">Điện gia dụng</a>
                            <a href="#">Xe cộ</a>
                            <a href="#">Mẹ & Bé</a>
                            <a href="#">Khỏe đẹp</a>
                            <a href="#">Nhà cửa</a>
                            <a href="#">Sách</a>
                            <a href="#">Thể thao</a>
                            <a href="#">Ensure</a>
                            <a href="#">Sure Prevent Gold 900g</a>
                            <a href="#">Sữa tiểu đường</a>
                        </div>
                    </div>

                    <div class="header-bottom">
                        <div>
                            <img src="~/Content/Image/diadiem.png" alt="Location Icon" />
                            <span>Giao đến:</span>
                            <a href="#" class="address">Q.1, P. Bến Nghé, Hồ Chí Minh</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- Các mục lục lựa chọn -->
        <!-- Breadcrumb căn trái -->
        <div class="breadcrumb">
            <a href="#">Trang chủ</a> &gt;
            <a href="#">Đồ Chơi - Mẹ & Bé</a> &gt;
            <a href="#">Dinh dưỡng cho người lớn</a> &gt; Lon Sữa Glucerna 800g/lon - Tặng 2 gói dùng thử
        </div>

        <!-- Phần nội dung còn lại -->
        <div class="container">
            <section>
                <div class="left-column">
                    <div class="product-images">
                        <img id="mainImage" src="~/Content/Image/anhlonsua.png" alt="Product Image" width="400" height="400" />
                    </div>

                    <div class="product-thumbnails">
                        <img class="thumbnail" src="~/Content/Thumpnail/thumpnail.png" alt="Thumbnail 1" width="60" height="60" />
                        <img class="thumbnail" src="~/Content/Thumpnail/thumpnail2.png" alt="Thumbnail 2" width="60" height="60" />
                        <img class="thumbnail" src="~/Content/Thumpnail/thumpnail3.png" alt="Thumbnail 3" width="60" height="60" />
                        <img class="thumbnail" src="~/Content/Thumpnail/thumpnail4.png" alt="Thumbnail 4" width="60" height="60" />
                    </div>
                </div>
            </section>
            <!-- Phần giữa -->
            <section>
                <div class="center-column">
                    <div class="product-info">
                        <h1>Lon Sữa Glucerna 800g/lon - Tặng 2 gói dùng thử</h1>
                        <div class="rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <span>5.0 (12)</span>
                        </div>

                        <div class="price">1.034.550₫</div>

                        <div class="flavor">
                            <span> Hương vị</span>
                            <button id="vanilla">Vani</button>
                        </div>
                    </div>
                </div>

                <div class="shipping-info p-3">
                    <div id="shippingInfo">
                        <p class="fs-5">Thông tin vận chuyển </p>
                        <p>Giao đến: Q.1, P. Bến Nghé, Hồ Chí Minh</p>
                    </div>
                    <div id="promotion">
                        <p class="fs-5">
                            <span class="highlight">NOW</span> Giao siêu tốc 2h
                        </p>
                        <p>
                            Trước 10h ngày mai: <span class="highlight">Miễn phí</span> 25.000₫
                        </p>
                    </div>
                    <div id="shippingPolicy">
                        <p class="fs-5">Giao hàng tiêu chuẩn</p>
                        <p>13h - 18h, 05/10: <span class="highlight">Miễn phí</span></p>
                        <p>Freeshop 10k đơn từ 45k, Freeship 25k đơn từ 100k</p>
                    </div>
                </div>
                <div class="additional-services mt-4">
                    <h3>Dịch vụ bổ sung</h3>
                    <div class="service-item">
                        <div class="service-icon">
                            <img src="~/Content/Image/tikicard.png" alt="TikiCard Icon" />
                        </div>
                        <div class="service-details">
                            <span>Ưu đãi đến 600k với thẻ TikiCard</span>
                        </div>
                        <div class="service-action">
                            <a href="#">Đăng ký</a>
                        </div>
                    </div>
                    <div class="service-item">
                        <div class="service-icon">
                            <img src="~/Content/Image/paylater.png" alt="PayLater Icon" />
                        </div>
                        <div class="service-details">
                            <span>Mua trước trả sau</span>
                        </div>
                        <div class="service-action">
                            <a href="#">Đăng ký</a>
                        </div>
                    </div>
                </div>
            </section>
            <section>
                <div class="right-column">
                    <section>
                        <div class="purchase-options">
                            <table>
                                <tr>
                                    <td valign="middle">
                                        <div class="header">
                                            <!-- Thay đổi đường dẫn ảnh logo bằng Razor -->
                                            <img class="object-fit-cover"
                                                 height="100"
                                                 src="~/Content/Image/Logo_Tiki_2023.png"
                                                 alt="Tiki Logo" />
                                        </div>
                                    </td>
                                    <td rowspan="2">Tiki Trading<br />4.7 <i class="fas fa-star"></i>-(5,5tr đánh giá)</td>

                                </tr>
                            </table>
                            <div class="right-column">
                                <div class="purchase-options">
                                    <div class="quantity">
                                        <button id="decreaseBtn">-</button>
                                        <input type="text" id="quantityInput" value="1" />
                                        <button id="increaseBtn">+</button>
                                    </div>
                                    <div class="temp-price">
                                        Tạm tính: <span id="tempPrice">1.034.550₫</span>
                                    </div>
                                    <button class="buy-now">Mua ngay</button>
                                    <button class="add-to-cart">Thêm vào giỏ</button>
                                    <button class="add-to-cart">Mua trước tra sau</button>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <section>
                    <div class="anh">
                        <img src="~/Content/Image/462280911_517725684362168_1116846740124846408_n.png" width="400" />
                    </div>
                </section>
            </section>
        </div>
    </div>

    <!-- Phần bên phải -->
    <script>
        const vanillaButton = document.getElementById("vanilla");
        vanillaButton.addEventListener("click", function () {
            // Xóa lớp 'selected' khỏi tất cả các nút khác
            const buttons = document.querySelectorAll(".flavor button");
            buttons.forEach(button => button.classList.remove("selected"));
            // Thêm lớp 'selected' vào nút đã chọn
            vanillaButton.classList.add("selected");
        });
        let price = 1034550; // Giá sản phẩm
        let quantityInput = document.getElementById('quantityInput');
        let tempPriceElement = document.getElementById('tempPrice');
        function updateTempPrice() {
            let quantity = parseInt(quantityInput.value);
            let tempPrice = price * quantity;
            tempPriceElement.textContent = tempPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
        }

        document.getElementById('increaseBtn').addEventListener('click', function () {
            quantityInput.value = parseInt(quantityInput.value) + 1;
            updateTempPrice();
        });

        document.getElementById('decreaseBtn').addEventListener('click', function () {
            if (parseInt(quantityInput.value) > 1) {
                quantityInput.value = parseInt(quantityInput.value) - 1;
                updateTempPrice();
            }
        });

        // Cập nhật tạm tính khi số lượng thay đổi thủ công
        quantityInput.addEventListener('input', function () {
            if (parseInt(quantityInput.value) > 0) {
                updateTempPrice();
            }
        });
        // Lấy tất cả các ảnh thumbnail
        let thumbnails = document.querySelectorAll('.thumbnail');

        // Lặp qua từng ảnh thumbnail và thêm sự kiện click
        thumbnails.forEach(function (thumbnail) {
            thumbnail.addEventListener('click', function () {
                // Lấy giá trị src của ảnh thumbnail
                let newImageSrc = this.src;
                // Gán giá trị src mới cho ảnh lớn
                document.getElementById('mainImage').src = newImageSrc;
            });
        });
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
